.container {
  background: #f0f0f0;
  padding-bottom: 120rpx;
}
.container .header {
  position: relative;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
}
.container .header .left {
  position: absolute;
  left: 0;
  top: 0;
  width: 16rpx;
  height: 88rpx;
  background: #f76260;
  transform: translateX(-8rpx);
  border-radius: 8rpx;
}
.container .header .wait-pay {
  margin-left: 41rpx;
  font-size: 32rpx;
  color: #f76260;
}
.container .header .order-number {
  font-size: 30rpx;
  color: #666;
  margin-right: 40rpx;
}
.container .detail-con {
  background: #fafafa;
  padding: 19rpx 40rpx;
}
.container .detail-con .detail {
  font-size: 30rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 70rpx;
}
.container .detail-con .show-more {
  height: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
}
.container .detail-con .show-more image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
}
.container .detail-con .show-more text {
  line-height: 30rpx;
  font-size: 30rpx;
  color: #999;
}
.container .discount-con {
  background: #fff;
  padding: 0 40rpx;
  overflow: hidden;
}
.container .discount-con .one {
  height: 104rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
}
.container .discount-con .discount .left {
  display: flex;
  width: 150rpx;
  justify-content: flex-start;
  align-items: center;
}
.container .discount-con .discount .left image {
  width: 24rpx;
  height: 24rpx;
  margin-left: 20rpx;
}
.container .discount-con .wait {
  border-top: 1rpx dashed #e5e5e5;
}
.container .discount-con .discount-detail {
  position: relative;
  border-top: 1rpx dashed #e5e5e5;
}
.container .discount-con .discount-detail .one {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 84rpx;
}
.container .discount-con .discount-detail .one .left {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.container .discount-con .discount-detail .one .left .mark {
  width: 32rpx;
  height: 32rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 32rpx;
  background: orange;
  border-radius: 8rpx;
  margin-right: 8rpx;
  color: #fff;
}
.container .discount-con .discount-detail .one .left .word {
  font-size: 32rpx;
  color: #333;
  text-align: left;
}
.container .discount-con .discount-detail .circle {
  width: 32rpx;
  height: 32rpx;
  background: #f0f0f0;
  position: absolute;
  border-radius: 50%;
}
.container .discount-con .discount-detail .circle1 {
  top: -16rpx;
  left: -56rpx;
}
.container .discount-con .discount-detail .circle2 {
  top: -16rpx;
  right: -56rpx;
}
.container .discount-con .discount-detail .circle3 {
  bottom: -16rpx;
  left: -56rpx;
}
.container .discount-con .discount-detail .circle4 {
  bottom: -16rpx;
  right: -56rpx;
}
.container .time {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  margin-top: 24rpx;
  padding: 0 40rpx;
  font-size: 32rpx;
  height: 104rpx;
}
.container .option-con {
  background: #fff;
  margin-top: 24rpx;
  padding: 0 40rpx;
}
.container .option-con .card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
}
.container .option-con .card .left {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.container .option-con .card .left .icon {
  width: 54rpx;
  height: 54rpx;
  margin-right: 16rpx;
}
.container .option-con .card .left .icon image {
  width: 54rpx;
  height: 54rpx;
}
.container .option-con .card .left .name {
  font-size: 34rpx;
  color: #333;
  height: 34rpx;
  line-height: 34rpx;
  margin-right: 16rpx;
}
.container .option-con .card .left .detail {
  font-size: 26rpx;
  color: #999;
  height: 34rpx;
  padding-top: 4rpx;
}
.container .option-con .card .right {
  height: 44rpx;
}
.container .btn-pay {
  height: 96rpx;
  line-height: 96rpx;
  font-size: 34rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  color: #fff;
  background: #fdaf31;
  border: 0;
  border-radius: 0;
}
.container .btn-pay::after {
  border: 0;
  border-radius: 0;
}
.img-rotate {
  transform: rotateX(180deg);
}
.price-red {
  color: #f76260;
}
.wait-red {
  font-weight: bold;
}
