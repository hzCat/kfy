<view class="container">
  <view class="group-step">
    <!-- 完成后加  step-on   -->
    <view class='step-top'>
      <view class='step-1'>
        <view class='num step-on'>1</view>
        <view class='line'></view>
      </view>
      <view class='step-2'>
        <view class='num'>2</view>
      </view>

    </view>
    <view class='step-bottom'>
      <!-- 完成后加 step-on-t   -->
      <view class='step-1'>
        <view class='text step-on-t'>联系汇款</view>
      </view>
      <view class='step-2'>
        <view class='text'>充值成功</view>
      </view>
    </view>
  </view>
  <!-- 充值失败 -->
  <view class="fail-con" wx:if="{{chargeInfo.orderStatus=='FAIL'}}">
    <view>充值失败</view>
    <view>{{chargeInfo.dealNote}}</view>
  </view>

  <!-- 账户 -->
  <view class='charge-account'>
    <view class="user-account">
      <view>充值账户：</view>
      <view>{{phoneNumber||'暂无'}}</view>
    </view>

    <!-- <text>充值账户：</text>
    <text>{{phoneNumber}}</text> -->
  </view>
  <view class='money-num'>
    <view class='input-con'>
      <label>汇款单号/流水号</label>
      <input placeholder='必填' maxlength="30" data-type="order" placeholder-class='placeholder' value="{{orderNumber||chargeInfo.transferFlowNo}}" bindtap="clear" bindblur="getOrderNumber"></input>
    </view>
    <view class='input-con'>
      <label>汇款金额</label>
      <input placeholder='必填' type="digit" data-type="money" placeholder-class='placeholder' value="{{money||chargeInfo.rechargeAmt}}" bindtap="clear" bindblur="getMoney"></input>
    </view>
  </view>
  <view class='other-info'>
    <view class='input-con'>
      <label>备注</label>
      <input placeholder='必填' maxlength="30" data-type="note" placeholder-class='placeholder' value="{{otherInfo||chargeInfo.note}}" bindtap="clear" bindblur="getNote"></input>
    </view>
    <view class='input-con'>
      <label>联系手机</label>
      <input placeholder='必填' maxlength="11" data-type="phone" type="number" placeholder-class='placeholder' value="{{phoneNumber||chargeInfo.contact}}" bindtap="clear" bindblur="getPhoneNumber"></input>
    </view>
  </view>
  <view class='service-phonenumber'>
    <text>客服电话：</text>
    <text bindtap="call">{{serviceNumber||'获取失败'}}</text>
  </view>
  <view class="btn-group">
    <button class="cancel" bindtap="cancelFail" wx:if="{{chargeInfo.orderStatus=='FAIL'}}">取消返回</button>
    <button class="submit" bindtap="pushAllInfo">提交</button>
  </view>
</view>
<shade modalOn="{{modalOn}}"></shade>