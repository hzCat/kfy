.container {
  background: #f0f0f0;
  position: fixed;
}
.container .header-switch {
  position: relative;
  width: 260rpx;
  height: 50rpx;
  border-radius: 24rpx;
  background: #ccc;
  margin: 0 auto;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 30rpx;
  color: #fff;
  margin-top: 40rpx;
}
.container .header-switch .left,
.container .header-switch .right {
  width: 50%;
  text-align: center;
  line-height: 50rpx;
  position: relative;
  z-index: 2;
}
.container .header-switch .move-box {
  position: absolute;
  left: 0;
  border-radius: 24rpx;
  width: 136rpx;
  height: 50rpx;
  background: #fdaf31;
  z-index: 1;
  box-shadow: 0 4rpx 12rpx #fc5f03;
  transition: all 0.3s linear;
}
.container .header-switch .move-to {
  left: 124rpx;
}
.container .info-con {
  background: #fff;
}
.container .info-con .vip-get .top {
  padding: 0 40rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 34rpx;
  height: 120rpx;
  line-height: 120rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.container .info-con .vip-get .top image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 32rpx;
}
.container .info-con .vip-get .bottom {
  padding: 0 40rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 200rpx;
}
.container .info-con .vip-get .bottom .left,
.container .info-con .vip-get .bottom .right {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 335rpx;
}
.container .info-con .vip-get .bottom .left image,
.container .info-con .vip-get .bottom .right image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 24rpx;
}
.container .info-con .vip-get .bottom .left .info,
.container .info-con .vip-get .bottom .right .info {
  height: 200rpx;
  padding: 60rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}
.container .info-con .vip-get .bottom .left .up,
.container .info-con .vip-get .bottom .right .up {
  font-size: 30rpx;
  color: #999;
}
.container .info-con .vip-get .bottom .left .down,
.container .info-con .vip-get .bottom .right .down {
  font-size: 24rpx;
}
.container .info-con .vip-get .bottom .left .down .strong,
.container .info-con .vip-get .bottom .right .down .strong {
  font-weight: bold;
  font-size: 30rpx;
}
.container .info-con .vip-get .bottom .right {
  margin-left: 60rpx;
}
.container .info-con .vip-get .open-vip-btn {
  height: 208rpx;
  width: 100%;
  padding: 46rpx 0;
}
.container .info-con .vip-get .open-vip-btn .open-vip {
  height: 88rpx;
  width: 670rpx;
  line-height: 88rpx;
}
.container .info-con .vip-show {
  margin-bottom: 24rpx;
}
.container .info-con .vip-show .your {
  padding: 0 40rpx;
  line-height: 120rpx;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.container .info-con .vip-show .your .left {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 34rpx;
}
.container .info-con .vip-show .your .left image {
  height: 40rpx;
  width: 34rpx;
  margin-right: 36rpx;
}
.container .info-con .vip-show .your .right {
  font-weight: bold;
  font-size: 34rpx;
}
.container .info-con .vip-show .your-money {
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
}
.container .info-con .vip-show .your-money .right {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.container .info-con .vip-show .your-money .right .array {
  width: 14rpx;
  height: 14rpx;
  border-right: 4rpx solid #999;
  border-bottom: 4rpx solid #999;
  transform: rotateZ(-45deg);
  margin-left: 32rpx;
}
.container .info-con .vip-show .your-integral {
  border-bottom: 1rpx solid #e5e5e5;
}
.container .info-con .vip-show .your-integral .right {
  margin-right: 48rpx;
}
.container .info-con .btn-group {
  height: 185rpx;
  margin: 29rpx 40rpx 0 40rpx;
  position: relative;
  color: #fff;
  overflow: hidden;
}
.container .info-con .btn-group .btn {
  width: 100%;
  height: 112rpx;
  line-height: 112rpx;
  padding-left: 36rpx;
  overflow: hidden;
  background: -webkit-linear-gradient(left, #fdaf31, #ff7e33);
  border-radius: 10rpx;
}
.container .info-con .btn-group .btn text {
  display: inline-block;
}
.container .info-con .btn-group .btn .money {
  font-weight: bold;
  font-size: 34rpx;
  margin-right: 50rpx;
}
.container .info-con .btn-group .btn .tips {
  font-size: 26rpx;
}
.container .info-con .btn-group .slogan {
  width: 200rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  background: #5076bd;
  font-size: 24rpx;
  position: absolute;
  top: 10rpx;
  right: -60rpx;
  transform: rotateZ(30deg);
}
.fail-tips {
  width: 100%;
  height: 0rpx;
  background: rgba(233, 79, 79, 0.91);
  color: #fff;
  padding: 0rpx 16rpx 0rpx 80rpx;
  display: flex;
  align-items: center;
  overflow: hidden;
  transition: height 0.3s linear;
}
.fail-tips .close {
  height: 88rpx;
  width: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.fail-tips image {
  width: 40rpx;
  height: 40rpx;
}
.fail-tips text {
  font-size: 34rpx;
  height: 40rpx;
  line-height: 40rpx;
  width: 526rpx;
  display: inline-block;
  padding-left: 24rpx;
}
.fail-tips-show {
  height: 88rpx;
}
