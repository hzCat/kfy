/* 更多按钮 */

.show-more {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 9rpx;
}

.show-more>.show-more-icon {
    width: 24rpx;
    height: 24rpx;
}

.icon-rotate {
    transform: rotateX(180deg);
}

.show-more>.show-more-text {
    font-size: 30rpx;
    color: #999;
    margin-left: 13rpx;
}


/* 合计 */

.price-total {
    /* height:284rpx; */
    width: 100%;
    background: #fff;
    padding: 0 41rpx;
    box-sizing: border-box;
    overflow: hidden;
}

.price {
    display: flex;
    font-size: 32rpx;
    justify-content: space-between;
}

.total {
    position: relative;
    padding: 37rpx 0;
    border-bottom: 1rpx dashed #f0f0f0;
}

.price .circle,
.off-con .circle {
    width: 32rpx;
    height: 32rpx;
    background: #f0f0f0;
    position: absolute;
    bottom: -16rpx;
    border-radius: 50%;
}

.price .circle1,
.off-con .circle1 {
    left: -56rpx
}

.price .circle2,
.off-con .circle2 {
    right: -56rpx;
}

.off-con {
    padding: 16rpx 0;
    border-bottom: 1rpx dashed #f0f0f0;
    position: relative;
}

.off-con .price {
    line-height: 72rpx;
}

.off-con .price>view:first-child {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.price .off-money{
  color:#fb4c41;
}
.price .mark {
    width: 32rpx;
    height: 32rpx;
    font-size: 26rpx;
    border-radius: 4rpx;
    color: #fff;
    text-align: center;
    line-height: 32rpx;
    margin-right: 8rpx;
}

.price .mark-orange {
    background: #fdaf31;
}
.price .mark-red {
    background: #f76260;
}
.price .mark-purple {
    background: #ab47bc;
}
.price .mark-purple-red {
    background: #ec407a;
}
.price .mark-purple-blue {
    background: #6272cc;
}
.price .mark-blue {
    background: #29b6f6;
}
.price .mark-green {
    background: #61c480;
}
.price .mark-lightgreen {
    background: #cddc39;
}


.price .word {
    font-size: 32rpx;
}

.pay-con{
  padding:20rpx 0;
}
.pay-con .price{
  line-height:72rpx;
}

.price .paid{
  font-weight: bold;
  color:#fb4c41;
}
.price-total2{
  margin-top:23rpx;
  padding-top:20rpx;
  padding-bottom:19rpx;
}
.other-info{
    line-height:72rpx; 
}



.line{
  position: absolute;
  top:0;
  left:-8rpx;
  height:88rpx;
  width:16rpx;
  background:#6bcaad;
  border-radius: 8rpx;
}
