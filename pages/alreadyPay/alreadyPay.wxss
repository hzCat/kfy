.container {
  /* width: 100vw;
    height: 10; */
  background: #f0f0f0;
  /* padding-bottom:335rpx; */
  overflow: auto;
}


/* 订单详情 */

.order-detail {
  background: #fafafa;
  padding-bottom: 34rpx;
}

.order-title {
  padding-left: 41rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 34rpx;
  margin-bottom: 48rpx;
  background: #fff;
  box-sizing: border-box;
}

.order-one {
  display: flex;
  height: 57rpx;
  justify-content: space-between;
  padding-left: 41rpx;
  padding-right: 41rpx;
  font-size: 30rpx;
  position: relative;
}

.order-one>view:nth-child(1) {
  width: 230rpx;
  height: 42rpx;
  white-space: nowrap;
  overflow: hidden;
}

.order-one>view:nth-child(2) {
  /* position: absolute;
    width: 100%;
    text-align: center;
    margin-left: -41rpx; */
  margin-left: -170rpx;
}
.order-one>view:nth-child(3) {
  width:110rpx;
}


/* 更多按钮 */

.show-more {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 9rpx;
}

.show-more>.show-more-icon {
  width: 24rpx;
  height: 24rpx;
}

.icon-rotate {
  transform: rotateX(180deg);
}

.show-more>.show-more-text {
  font-size: 30rpx;
  color: #999;
  margin-left: 13rpx;
}


/* 合计 */

.price-total {
  /* height:284rpx; */
  width: 100%;
  background: #fff;
  padding: 0 41rpx;
  box-sizing: border-box;
}

.price {
  display: flex;
  font-size: 30rpx;
  justify-content: space-between;
}


/* 优惠提示信息 */

.discount-type {
  background: #f95257;
  padding: 5rpx 29rpx;
  box-sizing: border-box;
  color: #fff;
  border-radius: 5px;
  position: absolute;
  left: 77rpx;
  font-size: 23rpx;
}

.user {
  padding-top: 48rpx;
}

.total {
  padding-top: 31rpx;
}

.discount {
  padding-top: 32rpx;
  position: relative;
}

.money-count {
  padding-top: 33rpx;
  padding-bottom: 48rpx;
  border-bottom: 1px dashed #dbdbdb;
}

.time {
  padding-top: 48rpx;
}

.pay-pattern {
  padding-top: 32rpx;
}

.place {
  padding-top: 32rpx;
  padding-bottom: 48rpx;
  /* border-bottom:1px solid #dbdbdb; */
}

.price>view:first-child {
  color: #333;
  font-size: 30rpx;
}

.price>view:last-child:not(.bluegreen) {
  color: #000;
  font-size: 30rpx;
}