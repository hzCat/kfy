/* 订单详情 */

.order-detail {
  position: relative;
    background: #fafafa;
    padding-bottom: 34rpx;
}

.order-title {
    padding-left: 41rpx;
    height: 88rpx;
    line-height: 88rpx;
    font-size: 34rpx;
    margin-bottom: 48rpx;
    background: #fff;
    box-sizing: border-box;
}

.order-one {
    display: flex;
    height: 57rpx;
    justify-content: space-between;
    padding-left: 41rpx;
    padding-right: 41rpx;
    font-size: 30rpx;
    position: relative;
}

.order-one>view:nth-child(1) {
    width: 230rpx;
    height: 42rpx;
    white-space: nowrap;
    overflow: hidden;
