<view class="container">
  <!-- 支付成功 -->
  <view class="success">
    <icon class="icon" type="success" color="#fdaf31" size="100"></icon>
    <view class="title">支付成功</view>
    <!-- <view class="detail-one">
      <view class="left">订单</view>
      <view class="right">{{detail.tradeResponse.orderList[0].orderNo||'无'}}</view>
    </view> -->

    <view class="order-no-title">订单编号</view>
    <view class="order-no-con">
      <view class="order-no-one" wx:for="{{detail.tradeResponse.orderList}}" wx:key="index" wx:if="{{index<=(showNum-1)}}">{{item.orderNo||'暂无'}}</view>
      <!-- <view class="order-no-one">12345123451234512345</view>
      <view class="order-no-one">12345123451234512345</view>
      <view class="order-no-one">12345123451234512345</view>
      <view class="order-no-one">12345123451234512345</view>
      <view class="order-no-one">12345123451234512345</view>
      <view class="order-no-one">12345123451234512345</view>
      <view class="order-no-one">12345123451234512345</view> -->
    </view>
    <view class="more" wx:if="{{detail.tradeResponse.orderList.length>2}}" bindtap="showMore">
      <view class="array {{showNum>2&&'rotate'}}"></view>
      <view class="num">更多订单{{showNum>2?'':'('+(detail.tradeResponse.orderList.length-2)+')'}}</view>
    </view>

    <view class="detail-one">
      <view class="left">合计</view>
      <view class="right">￥{{total||'0.00'}}</view>
    </view>
    <!-- 无优惠时不显示 -->
    <view class="detail-one" wx:if="{{offList}}">
      <view class="left discount">优惠</view>
      <view class="right">
        <view class="discount-one" wx:for="{{offList}}" wx:key="index">-￥{{item.offerAmt||'0.00'}}({{item.offerTypeDisplayName}})</view>
      </view>
    </view>
    <view class="detail-one">
      <view class="left">需支付</view>
      <view class="right">￥{{pay||'0.00'}}</view>
    </view>
    <view class="detail-one">
      <view class="left">已支付</view>
      <view class="right">￥{{pay||'0.00'}}</view>
    </view>
    <button class="back" data-jump="back" bindtap="jump">返回</button>
    <button class="show-order" data-jump="/pages/allOrder/allOrder" bindtap="jump">查看订单</button>
    <!-- <button class="show-order" data-jump="/pages/alreadyPay/alreadyPay?id={{detail.tradeResponse.orderList[0].id}}" bindtap="jump">查看订单</button> -->
  </view>
  <!-- 支付失败 -->
  <view class="fail"></view>
</view>
<shade modalOn="{{modalOn}}"></shade>