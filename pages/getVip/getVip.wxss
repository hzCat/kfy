.header-switch>view {
  float: left;
  line-height: 92rpx;
  text-align: center;
  width: 375rpx;
  font-size: 30rpx;
  border-bottom: 4px solid transparent;
  transition: border 0.5s linear;
}

.header-switch>.personal {
  width: 374rpx;
}

.header-switch>.line {
  width: 1rpx;
  height: 67rpx;
  background: #dbdbdb;
  margin-top: 16rpx;
}

.header-switch>.selected {
  color: #fdaf31;
  border-bottom: 4px solid #fdaf31;
}

.clear {
  clear: both;
}

