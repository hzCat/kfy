.p-vip {
  margin-top: 8rpx;
  transition: all 0.5s linear;
}

.p-vip .vip {
  position: relative;
  margin: 0 24rpx;
  color: #fff;
  padding: 25rpx 40rpx 34rpx 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #dbdbdb;
  border-radius: 16rpx;
  margin-top: 24rpx;
}

.p-vip .vip image {
  width: 135rpx;
  height: 31rpx;
}

.p-vip .vip .line-1 {
  position: relative;
  z-index: 2;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
}

.p-vip .vip .line-1>view:last-child {
  margin-top: 6rpx;
}

.p-vip .vip .line-2 {
  position: relative;
  z-index: 2;
  margin-top: 34rpx;
  padding-bottom: 25rpx;
  margin-left: 10rpx;
  font-size: 24rpx;
}

.strong {
  font-size: 36rpx;
}

.strong-2 {
  font-size: 30rpx;
}

.p-vip .vip .btn-group {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.p-vip .vip .btn-group button,
.p-vip .vip .btn-group-2 button {
  background: transparent;
  /* border: 1rpx solid #fff; */
  border-radius: 36rpx;
  padding: 0;
  height: 72rpx;
  width: 220rpx;
  font-size: 30rpx;
  line-height: 72rpx;
  margin: 0;
  margin-right: -8rpx;
}

.p-vip .vip .btn-group button::after,
.p-vip .vip .btn-group-2 button::after {
  background: transparent;
  border: 0;
}

.p-vip .vip .line-2>view {
  line-height: 45rpx;
}


/* vip-2 部分 */

.btn-group-2,
.btn-group-2 {
  display: flex;
