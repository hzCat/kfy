<!--index.wxml-->
<view class="container">
  <image src="../../img/index_img1.png" class="ad-img"></image>
  <view class="slogan">
    <image src="../../img/slogan.png" />
  </view>
  <view class="btn-group">
    <view class="left {{isVip[0]?none:'not-vip'}}" data-scope="VIP" bindtap="toQR">
      <image src="{{isVip[0]?'../../icon/isVip.png':'../../icon/notVip.png'}}"></image>
      <view class="name">
        {{isVip[0]?'会员付款':'开通会员'}}
      </view>
    </view>
    <view class="center" bindtap="openScan">
      <image src="../../icon/icon_scan.png"></image>
      <view class="name">
        扫一扫
      </view>
    </view>
    <view class="right {{isVip[1]?none:'not-vip'}}" data-scope="TVIP" bindtap="toQR">
      <image src="{{isVip[1]?'../../icon/isTvip.png':'../../icon/notTvip.png'}}"></image>
      <view class="name">
        {{isVip[1]?'团餐付款':'开通团餐'}}
      </view>
    </view>
  </view>
</view>

<!-- <view class="stop-modal" wx:if="{{modalOn}}"></view> -->
<shade modalOn="{{modalOn}}"></shade>