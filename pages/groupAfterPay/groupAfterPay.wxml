<view class="container">
  <view class="success">
    <icon class="icon" type="success" color="#fdaf31" size="100"></icon>
    <view class="title">支付成功</view>
    <view class="order-no-title">订单编号</view>
    <view class="order-no-con">
      <view class="order-no-one" wx:for="{{detail.orderList}}" wx:key="index" wx:if="{{index<=(showNum-1)}}">{{item.orderNo||'暂无'}}</view>
      <!-- <view class="order-no-one">12345123451234512345</view>
      <view class="order-no-one">12345123451234512345</view>
      <view class="order-no-one">12345123451234512345</view>
      <view class="order-no-one">12345123451234512345</view>
      <view class="order-no-one">12345123451234512345</view>
      <view class="order-no-one">12345123451234512345</view>
      <view class="order-no-one">12345123451234512345</view> -->
    </view>
    <view class="more" wx:if="{{detail.orderList.length>2}}" bindtap="showMore">
      <view class="array {{showNum>2&&'rotate'}}"></view>
      <view class="num">更多订单{{showNum>2?'':'('+(detail.orderList.length-2)+')'}}</view>
    </view>
    <view class="detail-one">
      <view class="left">合计</view>
      <view class="right">￥{{total||'0.00'}}</view>
    </view>
    <view class="detail-one" wx:if="{{offList}}">
      <view class="left">优惠</view>
      <view class="right">
        <view class="discount" wx:for="{{offList}}" wx:key="index">
          <text>-￥{{item.offerAmt||'0.00'}}</text>({{item.offerTypeDisplayName||'优惠'}})</view>
        <!-- <view class="discount-one">2222222</view> -->
      </view>
    </view>
    <view class="detail-one">
      <view class="left">需支付</view>
      <view class="right">￥{{pay||'0.00'}}</view>
    </view>
    <view class="detail-one">
      <view class="left">已支付</view>
      <view class="right">￥{{pay||'0.00'}}</view>
    </view>
    <!-- <view class="detail-one">
      <view class="left">现金收款</view>
      <view class="right">￥{{detail.cashAmt}}</view>
    </view>
    <view class="detail-one">
      <view class="left">找零</view>
      <view class="right">￥{{detail.changeAmt}}</view>
    </view> -->
    <view class="btn-group">
      <button class="btn-order-detail" data-jump="/pages/allOrder/allOrder" bindtap="jump">查看订单</button>
      <button class="btn-back" data-jump="back" bindtap="jump">返回</button>
    </view>
  </view>
</view>

<shade modalOn="{{modalOn}}"></shade>