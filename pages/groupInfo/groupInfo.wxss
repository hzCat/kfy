.container {
  padding-bottom: 100rpx;
}
.group-step {
  margin-top: -1rpx;
}

.getInfo {
  margin-top: 24rpx;
  border-top: 1px solid #dbdbdb;
}

/* 其他信息 */

.other-info {
  margin-top: 24rpx;
}

/* 按钮 */
.btn-group {
  position: fixed;
  bottom: 0;
  height: 96rpx;
  display: flex;
  width: 100%;
}
.submit,
.cancel {
  /* margin-top: 48rpx; */
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 0;
}
.cancel {
  background: #fff;
  color: #333;
}

.submit::after,
.cancel::after {
  border: 0;
  border-radius: 0;
}

button[disabled][type="default"],
wx-button[disabled]:not([type]) {
  background: #b3b3b3;
  color: #e5e5e5;
}
.container {
  background: #f0f0f0;
}
