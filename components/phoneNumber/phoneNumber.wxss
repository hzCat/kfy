.phoneNumber {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  background: rgba(0, 0, 0, 0.4);
}
.phoneNumber .modal {
  width: 560rpx;
  height: 592rpx;
  border-radius: 8rpx;
  background: rgba(247, 247, 247, 0.98);
  margin-top: 104rpx;
}
.phoneNumber .modal .title {
  height: 100rpx;
  width: 100%;
  border-bottom: 1rpx solid #d2d3d5;
  font-size: 36rpx;
  line-height: 100rpx;
  text-align: center;
}
.phoneNumber .modal .logo {
  text-align: center;
  padding: 40rpx 0;
}
.phoneNumber .modal .logo image {
  width: 70rpx;
  height: 70rpx;
  background: #bf1c2d;
  border-radius: 50%;
}
.phoneNumber .modal .input {
  border: 1rpx solid #808080;
  width: 476rpx;
  margin: 0 auto;
}
.phoneNumber .modal .input input {
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  padding-left: 16rpx;
}
.phoneNumber .modal .input .placeholder {
  color: #c7c7cc;
}
.phoneNumber .modal .input .phone {
  border-bottom: 1rpx solid #808080;
}
.phoneNumber .modal .input .test {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.phoneNumber .modal .input .test input {
  width: 100%;
}
.phoneNumber .modal .input .test .btn {
  width: 100%;
  padding-left: 24rpx;
  color: #fdaf31;
  font-size: 30rpx;
}
.phoneNumber .modal .input .test .line {
  width: 1rpx;
  height: 34rpx;
  border-left: 1rpx solid #ccc;
}
.phoneNumber .modal .btn-group {
  height: 100rpx;
  border-top: 1rpx solid #d2d3d5;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 62rpx;
}
.phoneNumber .modal .btn-group button {
  background: transparent;
  border-radius: 0;
  border: 0;
  color: #000;
  font-size: 36rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.phoneNumber .modal .btn-group button::after {
  border-radius: 0;
  border: 0;
}
.phoneNumber .modal .btn-group .next {
  width: 100%;
  border-right: 1rpx solid #d2d3d5;
}
.phoneNumber .modal .btn-group .relate {
  color: #fdaf31;
  width: 100%;
}
