.dishes {
  padding: 25rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.dishes .left {
  width: 152rpx;
  height: 152rpx;
  background: #ccc;
  border-radius: 4rpx;
  box-shadow: 0rpx 0 25rpx rgba(0, 0, 0, 0.15);
  overflow: hidden;
}
.dishes .left > image {
  width: 152rpx;
  height: 152rpx;
}
.dishes .right {
  width: 341rpx;
  height: 152rpx;
  overflow: hidden;
  text-align: left;
}
.dishes .right .name {
  font-size: 28rpx;
  color: #333;
  line-height: 42rpx;
  margin-top: 6rpx;
  font-weight: bold;
}
.dishes .right .sale_count {
  font-size: 24rpx;
  color: #939393;
  line-height: 39rpx;
}
.dishes .right .add {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 66rpx;
  line-height: 66rpx;
}
.dishes .right .add .price {
  color: #fb3d3c;
  font-size: 34rpx;
  font-weight: bold;
}
.dishes .right .add .count {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.dishes .right .add .count .cut,
.dishes .right .add .count .plus {
  width: 66rpx;
  height: 66rpx;
}
.dishes .right .add .count .num {
  width: 70rpx;
  height: 66rpx;
  line-height: 66rpx;
  text-align: center;
  font-weight: bold;
  font-size: 34rpx;
  color: #6a6a6a;
}
