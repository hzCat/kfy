/* 团餐多页面input */

.input-con {
  display: flex;
  justify-content: left;
  align-items: center;
  background: #fff;
  border-bottom: 1rpx solid #dbdbdb;
  height: 88rpx;
  padding: 0 40rpx;
}

.input-con label {
  font-size: 34rpx;
  color: #000;
  width: 40%;
}

.input-con input {
  padding-left: 100rpx;
  font-size: 28rpx;
  text-align: right;
}
.input-con textarea {
  padding-left: 100rpx;
  font-size: 28rpx;
  text-align: right;
}
.placeholder {
  color: #999;
}
/* 屏蔽透明模态框 */
.stop-modal {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1000;
}
/* 失败警告框 */
.fail-con {
  width: 100%;
  padding: 40rpx 50rpx 38rpx 50rpx;
  background: #fff7f8;
  border-top: 1rpx solid #ff5a60;
  border-bottom: 1rpx solid #ff5a60;
  margin-top: 24rpx;
  color: #ff5a60;
  font-weight: bold;
}
.fail-con > view:first-child {
  font-size: 34rpx;
  text-align: center;
}
.fail-con > view:last-child {
  font-size: 30rpx;
  text-align: center;
  line-height: 45rpx;
  margin-top: 28rpx;
}

